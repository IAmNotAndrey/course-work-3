<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ParaPen.Views">

	<!-- Рамка для действия --><!--
	<DataTemplate x:Key="ActionTemplate">
		<Border BorderBrush="Black" BorderThickness="1" Background="LightGray">
			<TextBlock Text="{Binding Label}" />
			--><!-- Дополнительные элементы для действия, например, прямоугольник --><!--
			<Rectangle Width="30" Height="20" Fill="Blue" />
		</Border>
	</DataTemplate>

	--><!-- Рамка для условия --><!--
	<DataTemplate x:Key="ConditionTemplate">
		<Border BorderBrush="Black" BorderThickness="1" Background="LightGray">
			<TextBlock Text="{Binding Label}" />
			--><!-- Дополнительные элементы для условия, например, ромб --><!--
			<Polygon Points="0,10 10,0 20,10 10,20" Fill="Green" />
		</Border>
	</DataTemplate>-->

</ResourceDictionary>
