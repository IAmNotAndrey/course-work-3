<Window x:Class="ParaPen.Views.InkConditionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParaPen.Views"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"

		xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
		xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:conv="clr-namespace:ParaPen.Converters"
		xmlns:vmd="clr-namespace:ParaPen.ModelViews.Dialogs"
        mc:Ignorable="d"
		WindowStyle="None"
        Title="InkConditionDialog" 
		Height="150" Width="250"
		x:Name="this">
	<Window.DataContext>
		<vmd:InkConditionDialogVM />
	</Window.DataContext>

	<Window.Resources>
		<conv:MultiValueConverter x:Key="MultiValueConverter" />
	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TextBlock Text="Steps" Grid.Row="0" />
		<xctk:IntegerUpDown x:Name="stepField" 
							Grid.Row="1"
							Minimum="0" 
							Maximum="{x:Static sys:Int32.MaxValue}"
							Value="0"
							HorizontalAlignment="Center"
							VerticalAlignment="Center" />

		<TextBlock Text="Direction" Grid.Row="2" />
		<ComboBox x:Name="directionsCB" ItemsSource="{Binding DirectionsValues}" Grid.Row="3" />

		<StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="4" Margin="0,5,5,5" >
			<Button Content="OK"
					Margin="0,0,10,0" >
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="Click">
						<i:InvokeCommandAction Command="{Binding OkCommand}">
							<i:InvokeCommandAction.CommandParameter>
								<MultiBinding Converter="{StaticResource MultiValueConverter}">
									<Binding ElementName="stepField" Path="Value" />
									<Binding ElementName="directionsCB" Path="SelectedItem" />
								</MultiBinding>
							</i:InvokeCommandAction.CommandParameter>
						</i:InvokeCommandAction>
						<i:InvokeCommandAction Command="{Binding CancelCommand}" CommandParameter="{Binding ElementName=this}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
			</Button>

			<Button Content="Cancel" 
					Command="{Binding CancelCommand}" CommandParameter="{Binding ElementName=this}" />
		</StackPanel>
	</Grid>
</Window>
